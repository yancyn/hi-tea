<Window x:Class="PosWPF.Window2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Height="300" Width="300">
    <WrapPanel>
        <Button x:Name="button1" Margin="10"
                Content="{Binding QueueNo}" Style="{StaticResource TableBallStyle}"
                PreviewMouseLeftButtonDown="button_PreviewMouseLeftButtonDown"
                PreviewMouseMove="button_PreviewMouseMove" />
        <Button x:Name="button2" Margin="10"
                Content="{Binding QueueNo}" Style="{StaticResource TableBallStyle}"
                AllowDrop="True" DragEnter="button_DragEnter" Drop="button_Drop" />
    </WrapPanel>
</Window>