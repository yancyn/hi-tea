<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="PosWPF.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    mc:Ignorable="d"
    Style="{StaticResource BorderlessWindowStyle}"
    WindowStartupLocation="CenterScreen"
    x:Name="LoginScreen"
    Height="300" Width="400">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" Source="{StaticResource UserIcon}" />
        <StackPanel Grid.Column="1" VerticalAlignment="Center">
            <TextBox x:Name="UserName" Text="{Binding Cashier.Username}" Style="{StaticResource TextBoxStyle}" Width="150" Margin="10" />
            <TextBox Style="{StaticResource TextBoxStyle}" Width="150" Margin="10"/>
            <Button Width="60" Content="Login" HorizontalAlignment="Right" Margin="10" />
        </StackPanel>
    </Grid>
</Window>