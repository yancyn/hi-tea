<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="PosWPF.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:p="clr-namespace:HiTea.Pos;assembly=HiTea.Pos"
    xmlns:w="clr-namespace:PosWPF"
    Title="PosWPF"
    Style="{StaticResource BorderlessWindowStyle}"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized">
    <Window.Resources>
        <w:MenuDisplayNameConverter x:Key="DisplayName" />
        <DataTemplate DataType="{x:Type p:Menu}">
            <Button Content="{Binding .,Converter={StaticResource DisplayName}}" Margin="10" />
        </DataTemplate>
        <DataTemplate DataType="{x:Type p:Category}">
            <GroupBox Header="{Binding Name}">
                <DockPanel LastChildFill="True" DataContext="{Binding}">
                    <ItemsControl x:Name="menus" ItemsSource="{Binding MenuCollection}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </DockPanel>
            </GroupBox>
        </DataTemplate>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Column="0" LastChildFill="True">
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal">
                <Button Content="DO" Height="40" Width="40" Style="{StaticResource CircleButtonStyle}" />
                <Button Content="Label" Height="40" Width="40" Style="{StaticResource CircleButtonStyle}" />
                <Button Content="Receipt" Height="40" Width="40" Style="{StaticResource CircleButtonStyle}" />
            </StackPanel>
            <Viewbox />
        </DockPanel>

        <Separator Grid.Column="1" Style="{DynamicResource VerticalSeparatorStyle}" />
        
        <DockPanel Grid.Column="2" LastChildFill="True" DataContext="{Binding}">
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Setting" Height="40" Width="40" Style="{StaticResource CircleButtonStyle}" />
            </StackPanel>
            <ScrollViewer>
                <ItemsControl x:Name="categories" ItemsSource="{Binding Categories}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel Orientation="Vertical" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</Window>