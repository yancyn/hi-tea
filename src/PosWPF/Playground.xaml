<Window x:Class="PosWPF.Playground"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"        
             mc:Ignorable="d"
             xmlns:w="clr-namespace:PosWPF"
             Width="500" Height="500">
    <Window.Resources>
        <x:Array Type="sys:Int32" x:Key="TableIndexes">
            <sys:Int32>3</sys:Int32>
            <sys:Int32>7</sys:Int32>
            <sys:Int32>8</sys:Int32>
        </x:Array>
    </Window.Resources>
    <DockPanel LastChildFill="True">
        <w:TableControl x:Name="MainTable" DisplayIndexes="{StaticResource TableIndexes}" />
        
        <!--<Grid Width="40" Height="40">
            <Ellipse Height="40" Width="40" Stroke="Gray" StrokeThickness="2" />
            <TextBlock Text="2" Margin="5 5 0 0" />
        </Grid>-->
    </DockPanel>
</Window>